
@{
    ViewBag.Title = "Resources";
}

<style>
    a.list-group-item {
        color: #AAAAAA;
    }

    a.list-group-item:hover {
        color: #DDDDDD;
    }
</style>

<!--=== Breadcrumbs ===-->
<div class="breadcrumbs">
    <div class="container">
        <h1 class="pull-left">Resources</h1>
        <ul class="pull-right breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="active">Resources</li>
        </ul>
    </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<div class="container content">
    <div class="row">
        <div class="col-sm-8 col-xs-12">
            <div class="headline"><h2>Resources</h2></div>
            <p>We've compiled a small list of resources for you to have that should help! Check them out!</p>

            <div class="list-group col-xs-8 col-xs-offset-2">
                <a href="@Url.Action("Timeline", "Resources")" class="list-group-item">Warcraft Universe Timeline</a>
                <a href="@Url.Action("EditorGuide", "Resources")" class="list-group-item">Editor BBCode Markup Guide</a>
            </div>
        </div>
        <div class="col-sm-4 col-xs-12">
            <div class="headline">
                <h2>Contact Us</h2>
            </div>
            <p>We'd love to get your feedback on the website. Have something to say? Let us know!</p>
            @using (Html.BeginForm("SendContact", "Home", FormMethod.Post, new { @class = "sky-form contact-style" }))
            {
                <fieldset class="no-padding">
                    <label>Name <span class="color-red">*</span></label>
                    <div class="row sky-space-20">
                        <div class="col-md-7 col-md-offset-0">
                            <div>
                                <input type="text" name="name" id="name" class="form-control">
                            </div>
                        </div>
                    </div>

                    <label>Email <span class="color-red">*</span></label>
                    <div class="row sky-space-20">
                        <div class="col-md-7 col-md-offset-0">
                            <div>
                                <input type="text" name="email" id="email" class="form-control">
                            </div>
                        </div>
                    </div>

                    <label>Message <span class="color-red">*</span></label>
                    <div class="row sky-space-20">
                        <div class="col-md-11 col-md-offset-0">
                            <div>
                                <textarea rows="8" name="message" id="message" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>

                    <p><button type="submit" class="btn-u">Send Message</button></p>
                </fieldset>
            }
        </div>
    </div>

</div>