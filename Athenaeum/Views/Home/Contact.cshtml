@{
    ViewBag.Title = "Contact";
}
<!--=== Breadcrumbs ===-->
<div class="breadcrumbs">
    <div class="container">
        <h1 class="pull-left">Contact Us</h1>
        <ul class="pull-right breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="active">Contact</li>
        </ul>
    </div>
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<!--=== Content Part ===-->
<div class="container content">
    <div class="row margin-bottom-30">
        <div class="col-md-9 mb-margin-bottom-30">
            <div class="headline"><h2>Contact Form</h2></div>
            <p>We're always delighted to hear from people about the site or anything at all really. Please take a moment to shoot us a note, whether it's about feedback or just to say hello!</p><br />
        
        @using (Html.BeginForm("SendContact", "Home", FormMethod.Post, new {@class = "sky-form contact-style"}))
        {
            <fieldset class="no-padding">
                    <label>Name <span class="color-red">*</span></label>
                    <div class="row sky-space-20">
                        <div class="col-md-7 col-md-offset-0">
                            <div>
                                <input type="text" name="name" id="name" class="form-control">
                            </div>
                        </div>
                    </div>

                    <label>Email <span class="color-red">*</span></label>
                    <div class="row sky-space-20">
                        <div class="col-md-7 col-md-offset-0">
                            <div>
                                <input type="text" name="email" id="email" class="form-control">
                            </div>
                        </div>
                    </div>

                    <label>Message <span class="color-red">*</span></label>
                    <div class="row sky-space-20">
                        <div class="col-md-11 col-md-offset-0">
                            <div>
                                <textarea rows="8" name="message" id="message" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>

                    <p><button type="submit" class="btn-u">Send Message</button></p>
                </fieldset>
        }
            
        </div><!--/col-md-9-->

        <div class="col-md-3">
            <!-- Contacts -->
            <div class="headline"><h2>In-Game</h2></div>
            <ul class="list-unstyled who margin-bottom-30">
                <li>Technoplex#2208</li>
                <li>Skargrak (Horde)</li>
                <li>Mathiasdena (Alliance)</li>
            </ul>
        
            <!-- Why we are? -->
            <div class="headline"><h2>Why?</h2></div>
            <p>We strive to make things as great as possible. We can't do that without your feedback. Everytime you talk to us, things will get better. We promise!</p>
         </div><!--/col-md-3-->
    </div><!--/row-->
</div>
