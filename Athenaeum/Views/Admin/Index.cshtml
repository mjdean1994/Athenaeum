@using Athenaeum.Controllers
@model Athenaeum.ViewModels.Admin.AdminIndexViewModel
@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="breadcrumbs">
    <div class="container">
        <h1 class="pull-left">Administration Dashboard</h1>
        <ul class="pull-right breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="active">Administration Dashboard</li>
        </ul>
    </div>
</div><!--/breadcrumbs-->

<div class="container content-sm">
    @if (Model.UnansweredContactMessages > 0)
    {
        <div class="alert alert-warning">
            <h2>
                @if (Model.UnansweredContactMessages == 1)
                {
                    <h2><i class="fa fa-warning"></i> There is @Model.UnansweredContactMessages unanswered message in the inbox! <a href="@Url.Action("Inbox", "Admin")" class="btn-u pull-right">Inbox</a></h2>
                }
                else
                {
                    <h2><i class="fa fa-warning"></i> There are @Model.UnansweredContactMessages unanswered messages in the inbox! <a href="@Url.Action("Inbox", "Admin")" class="btn-u pull-right">Inbox</a></h2>
                }
            </h2>        
        </div>
    }
    
    <div class="row">
        <div class="col-xs-2">
            <div class="list-group">
                <a href="@Url.Action("Inbox")" class="list-group-item">Inbox <span class="badge">@Model.UnansweredContactMessages</span></a>
                <a href="@Url.Action("Users")" class="list-group-item">Users</a>
            </div>
        </div>
    </div>
</div>