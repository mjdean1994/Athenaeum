            <li>@Html.ActionLink("R", "Index", "Guild", new { startLetter = "R" }, null)</li>
            <li>@Html.ActionLink("S", "Index", "Guild", new { startLetter = "S" }, null)</li>
            <li>@Html.ActionLink("T", "Index", "Guild", new { startLetter = "T" }, null)</li>
            <li>@Html.ActionLink("U", "Index", "Guild", new { startLetter = "U" }, null)</li>
            <li>@Html.ActionLink("V", "Index", "Guild", new { startLetter = "V" }, null)</li>
            <li>@Html.ActionLink("W", "Index", "Guild", new { startLetter = "W" }, null)</li>
            <li>@Html.ActionLink("X", "Index", "Guild", new { startLetter = "X" }, null)</li>
            <li>@Html.ActionLink("Y", "Index", "Guild", new { startLetter = "Y" }, null)</li>
            <li>@Html.ActionLink("Z", "Index", "Guild", new { startLetter = "Z" }, null)</li>
        </ul>
    </nav>

    <table class="table table-striped">
        <tbody>
            @foreach (var guild in Model)
            {
                <tr>
                    <td>@Html.ActionLink(guild.Name, "Details", "Guild", new { id = guild.GuildId }, null)</td>
                    <td class="text-right">@guild.Faction</td>
                </tr>
            }
            @if (Model.Count == 0)
            {
                <tr>
                    <td>No guilds found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>