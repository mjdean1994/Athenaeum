@using Microsoft.AspNet.Identity
@model Athenaeum.Models.ManageUserViewModel

<div class="headline"><h2>Change Password</h2></div>
@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "sky-form contact-style", role = "form" }))
{
    @Html.AntiForgeryToken()
    <fieldset class="no-padding">
        <label>Old Password <span class="color-red">*</span></label>
        <div class="row sky-space-20">
            <div class="col-md-7 col-md-offset-0">
                <div>
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <label>New Password <span class="color-red">*</span></label>
        <div class="row sky-space-20">
            <div class="col-md-7 col-md-offset-0">
                <div>
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
            </div>
        </div>
        
        <label>Confirm New Password <span class="color-red">*</span></label>
        <div class="row sky-space-20 margin-bottom-20">
            <div class="col-md-7 col-md-offset-0">
                <div>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <p><button type="submit" class="btn-u">Send Message</button></p>
    </fieldset>
}
